<header class="p-3 text-bg-dark">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <h1>FlyRexy</h1>
      </ul>
      <div class="text-end">
        <% if user_signed_in? %>
          <%= current_user.login %>
          <p1 style="padding-left: 20px">
            <button type="button" class="btn btn-danger"><%= link_to 'Log out', session_path, class: 'no_line', data: {turbo_method: :delete}%></button>
            <button type="button" class="btn btn-outline-light me-2"><%= link_to 'Edit info', edit_user_path(current_user), class: 'no_line_chill' %></button>
          </p1>
        <% else %>
          <button type="button" class="btn btn-outline-light me-2"><%= link_to 'Log in', new_session_path, class: 'no_line_chill' %></button>
          <button type="button" class="btn btn-warning"><%= link_to 'Sign up', new_user_path, class: 'no_line'  %></button>
        <% end %>
        <button type="button" class="btn btn-outline-light me-2"><%= link_to 'Show online', all_path, class: 'no_line_chill' %></button>
      </div>
    </div>
  </div>
</header>